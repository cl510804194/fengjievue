<!DOCTYPE HTML>
<html>
<head>
	<meta charset="UTF-8">
	<title>新增帮助页</title>
	<link type="text/css" href="/resources/css/after.css" rel="stylesheet" />
	<link type="text/css" href="/resources/js/jqzoom_ev-2.3/css/jquery.jqzoom.css" rel="stylesheet" />
</head>
<body>
	<div class="warp">
		<!--头部-->
		#parse("/backstage/layout/logo.vm")
		<!--内容-->
		<div class="container fn-clear">
			#parse("/backstage/layout/left.vm")
			<div class="main-content fn-right">
				<div class="mc">
					<div class="top">
						<p><a href="">常见问题管理</a> > 新增问题页</p>
					</div>
					<form action="/backstage/popHelp/addHelpSubmit" method="post" class="ui-form" id="add_pop_form">
						
						<fieldset>
							<legend><h3>新增问题页</h3></legend>
							<div class="item">
								<label for="" class="u-label"><span class="required">*</span>问题标题：</label>
								<input type="text" class="u-input" style="width:300px;" name="title"/>
							</div>
							<div class="item">
								<label for="" class="u-label"><span class="required">*</span>问题类型：</label>
								<input type="radio" name="type" class="radio" checked=checked  value="6"/><label for="">普通问题页</label>
								<input type="radio" name="type" class="radio"  value="7"/><label for="">问题模块</label>
							</div>
							<div id="selectModules" class="item" style="z-index:10;">
								<label for="" class="u-label"><span class="required">*</span>模块列表：</label>
								<div class="jqtransform jqtransform-select3">
									<select name="parentId">
										<option value="-1">---&nbsp;请选择问题模块&nbsp; ---</option>
										#foreach($help in $!{helpModules})
										<option value="$!{help.popId}">$!{help.title}</option>
										#end
									</select>
									
								</div>
								<p ><span class="required" id="s2"></span></p>
							</div><br/><br/>
							<div class="item">
								<label for="" class="u-label"><span class="required">*</span>问题内容：</label>
								<textarea name="content" class="u-area" style="width:720px;height:480px;"></textarea>
							</div> 
							<div class="item" style="width:300px;height:200px;">
							<label for="" class="u-label">上传图片：</label>
								#parse("/backstage/layout/pictureUpload.vm")                          
							</div>
							<div class="item">
								<label for="" class="u-label">内容备注：</label>
								<input type="text" class="u-input" style="width:300px;" name="remark"/>
							</div>
						</fieldset>
						<input type="hidden" name="status" value="1"/>
						<div class="item mt10">
                            <a href="javascript:;"  class="u-btn u-btn-blue fn-submit1">立即保存</a><a href="javascript:history.go(-1);" class="u-btn u-btn-gray">取消</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>	
	<script type="text/javascript">
    	var $_GLOBAL = {};
    </script>
	<script type="text/javascript" src="/resources/js/lib/jquery-1.7.2.min.js"></script>
	<script type="text/javascript" src="/resources/js/lib/sea.js"></script>
	<script type="text/javascript" src="/resources/js/datepicker/WdatePicker.js"></script>
	<script type="text/javascript" src="/resources/js/xheditor/xheditor-1.2.1.min.js"></script>
	<script type="text/javascript" src="/resources/js/xheditor/xheditor_lang/zh-cn.js"></script>
	<script type="text/javascript" src="/resources/js/content/pictureUpload.js"></script>
	<script type="text/javascript">
    	seajs.use($_GLOBAL.mode + 'popHelp');
    </script>
</body>
</html>