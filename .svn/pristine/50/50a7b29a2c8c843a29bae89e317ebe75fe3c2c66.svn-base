.page_first_upbutton{padding:2px 7px;border:1px #666666 solid;margin-right:2px; background-color:#fefefe;}
		
#pageDiv{float:right; height:35px; padding-top:15px; text-align:right; color:#666; font-size:12px;}
#pageDiv a{padding:2px 7px;border:1px #1d6e00 solid;font-size:12px;margin:0 2px;}	
#pageDiv a:link { color:#666666; text-decoration: none; font-size:12px;} 
#pageDiv a:visited { color:#666666; text-decoration: none;font-size:12px;} 
#pageDiv a:hover { color: #000000;  background:#ebf9df;font-size:12px;} 
#pageDiv a:active { color: #FF5151; text-decoration: underline;font-size:12px;}
#pageDiv span{padding:2px 7px;border:1px #1d6e00 solid;font-size:12px;margin:0 2px;background:#A5D2A7;}	

