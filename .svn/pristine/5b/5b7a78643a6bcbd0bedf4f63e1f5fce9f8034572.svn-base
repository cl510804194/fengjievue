<!DOCTYPE HTML>
<html>
<head>
	<meta charset="UTF-8">
	<title>红包管理-红包</title>
	<link type="text/css" href="/resources/css/after.css" rel="stylesheet" />
</head>
<body>
	<div class="warp">
		<!--头部-->
		#parse("/backstage/layout/logo.vm")
		<!--内容-->
		<div class="container fn-clear">
			#parse("/backstage/layout/left.vm")
			<div class="main-content fn-right">
				<div class="mc">
					<div class="top">
						<p><a href="/admin/giftMoney/pageQueryGainMoney.htm">红包管理</a> > 领取详情</p>
					</div>
					<div class="search fn-clear">
						<form action="/admin/giftMoney/pageQueryGainMoneyTrade.htm"  method="post" >
							<dl style="width:250px;">
								<dt>账户名：</dt>
								<dd><input type="text" class="u-input" name="username" value="$!{queryConditions.username}"/>
                                    <input type="hidden" class="u-input" name="giftId" value="$!{queryConditions.giftId}"/>
                                    <input type="hidden" class="u-input" name="giftType" value="GIFT_MONEY"/></dd>
							</dl>
                            <button type="submit" class="s-btn">搜索</button>
						</form>
					</div>
					<div class="t-box">
                        <div class="p-box pages-b fn-clear">
                                #parse("/backstage/page/page.vm")
                        </div>
						<table class="m-table">
							<tr>
                                <th>账户名</th>
                                <th>所属红包</th>
                                <th>金额</th>
                                <th>红包开始时间</th>
                                <th>红包结束时间</th>
                                <th>领取时间</th>
                                <th>使用时间</th>
                                <th>红包用途</th>
                                <th>状态</th>
                                <th>使用详情</th>

							</tr>
							#if($page.result.size()==0)
                				<tr class="even">
                					<td colspan=8 align=center>未领取红包</td>
                				</tr>
							#end
							#foreach($info in $page.result)
							<tr>
                                <td>$!{info.username}</td>
                                <td>$!{info.giftName}</td>
                                <td>$!{info.amount}</td>
                                <td>$!dateUtil.simpleFormat($!{info.startDate})</td>
                                <td>$!dateUtil.simpleFormat($!{info.endDate})</td>
                                <td>$!dateUtil.simpleFormat($!{info.rawAddTime})</td>
                                <td>$!dateUtil.simpleFormat($!{info.rawUpdateTime})</td>
								<td>消费 </td>
##								<td>#if($!{info.useType}=="ONLY_INVEST") 投资 #end  </td>
                                <td>#if($!{info.status}=="NORMAL") 未使用 #elseif($!{info.status}=="EXPIRE") 过期 #else 已使用  #end</td>
                                <td><a href="/admin/giftMoney/pageQueryUseGainMoneyTrade.htm?giftId=$!{info.giftTradeId}&giftType=GIFT_MONEY">使用详情</a></td>
							</tr>
							#end
						</table>
                        <div class="p-box pages-b fn-clear">
                             #parse("/backstage/page/page.vm")
                        </div>

					</div>
				</div>
			</div>
		</div>
	</div>	
	<script type="text/javascript">
    	var $_GLOBAL = {};
    </script>
	<script type="text/javascript" src="/resources/js/lib/jquery-1.7.2.min.js"></script>
	<script type="text/javascript" src="/resources/js/lib/sea.js"></script>
	<script type="text/javascript">
        seajs.use($_GLOBAL.mode + 'pageQueryGiftMoneyTradeInfo');

		function toPage(totalPage, pageNo){
    		if(totalPage<pageNo){
    			return false;
    		}
			var url = "/admin/giftMoney/pageQueryGainMoneyTrade.htm"
			+"?username=$!{queryConditions.username}"
			+"&giftId=$!{queryConditions.giftId}"
			+"&pageSize=$!{page.pageSize}&pageNo="+pageNo;
			window.location.href=url;
		}
    </script>
</body>
</html>