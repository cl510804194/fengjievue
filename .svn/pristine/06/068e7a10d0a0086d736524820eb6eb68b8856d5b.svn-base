 @charset "utf-8";
 @import url("../css/common/base.css");
 @import url("../css/common/layout.css");
 @import url("../css/common/box.css");
 @import url("../css/common/form.css");
 @import url("../css/common/comp.css");
 @import url("../css/common/style.css");

/*选择银行*/
.choose-bank .select-box{width:227px; height:40px; border:1px solid #ccc; border-radius:3px; position:relative; margin-bottom:1px;}
.choose-bank .select-box img{margin:0 0 0 15px; vertical-align:middle;}
.choose-bank .select-box .select-right{background:url(../images/common/select_right5.gif) no-repeat; display:block; width:35px; height:37px; position:absolute; right:0; top:1px;}
.bank-list{width:610px; border:1px solid #ccc; border-radius:3px; padding:15px; position:relative; background:#fff; z-index:10003; }
.bank-list li{width:150px; height:45px; background:#FFF; line-height:45px; border:1px solid #fff; float:left; vertical-align:middle;}
.bank-list li img{margin:3px 0 0 15px;}
.bank-list .cur{border-color:#A60000;}
.fn-item .t-pay{border:1px solid #c2ddd0;}
.fn-item .t-pay th, .fn-item .t-pay td{padding:0 0 0 15px;}
.fn-item .t-pay th{background:#e9f6f0; height:30px;}
.fn-item .t-pay td{height:45px;}
.con-tab{padding:10px 20px; border-bottom:1px solid #e1e1e1; font-size:14px; font-family:"微软雅黑";}
.con-tab a{color:#666; font-weight:700;}
.con-tab .cur{color:#a60000;}
.con-tab span{padding:0 15px;}
.pay-infor{margin-bottom:10px; padding:20px; font-size:14px; line-height:24px;}
/*快捷支付*/
.tx-confirm{padding:25px 20px; margin-bottom:30px;}
.tx-confirm h4{font-size:14px; color:#666; margin-bottom:10px; font-weight:600;}
.tx-confirm .tx-tip{margin:0 0 15px 60px;}
.tx-confirm li{margin-bottom:10px;}
.tx-confirm li span{display:inline-block; width:120px; text-align:right; margin-right:5px;}
.fast-payment{padding:0 0 30px 145px;}
.fast-payment dt{font-weight:bold; margin-bottom:10px;}
.fast-payment dd{line-height:24px;}
.fast-payment dd span{display:inline-block; width:70px;}
.fast-btn{padding:30px 0 30px 145px;}
.open-payment .open-warning{padding:30px 0 40px 100px;}
.open-payment .open-warning .warn-ico{width:32px; height:32px; background:url(../images/common/icon.gif) no-repeat -60px -196px; position:absolute; top:30px; left:55px;}
.open-payment .open-warning h4{font-size:16px; font-weight:bold;}
.open-payment .open-warning h4 img{margin:0 5px;}
.open-payment .open-warning p span{color:#ccc; padding:0 5px;}
.open-guide .guide-link{background:url(../images/common/icon.gif) no-repeat -105px -150px; padding:3px 0 3px 20px;}
.open-guide .open-process{padding:20px 0;}
.open-guide .open-process li{position:relative; padding:0 0 0 80px;}
.open-guide .open-process li .num-1{position:absolute; width:25px; height:31px; background:url(../images/common/num-1.gif) no-repeat; left:45px; top:0; *top:-5px; _left:-30px; text-indent:-9999px;}
.open-guide .open-process li .num-2{position:absolute; width:25px; height:31px; background:url(../images/common/num-2.gif) no-repeat; left:45px; top:0; *top:-5px; _left:-30px; text-indent:-9999px;}
.open-guide .open-process li h4{font-size:14px; font-weight:600;}
.open-guide .open-process li p{color:#333; margin-bottom:5px;}
/*提现*/
.fm-pay{padding:20px 15px; margin-bottom:30px;}
.fm-pay h4{font-size:14px; color:#666; margin-bottom:10px; font-weight:600;}
.selected-bank li{float:left; display:inline; border:1px solid #e7e7e7; -moz-border-radius:5px; -webkit-border-radius:5px; border-radius:5px; margin:0 10px 7px 0; width:135px; height:67px; text-align:center; position:relative;}
.selected-bank li.cur{border-width:1px; border-color:#f60;}
.selected-bank li p{color:#555;}
.selected-bank li .del{ position:absolute; width:8px; height:8px; background:url(../images/common/del-ico.gif) no-repeat; top:3px; right:3px;}
.selected-bank li .add-b{background:url(../images/common/add-ico.gif) no-repeat center top; padding:20px 0 0; display:block; margin:15px 0 0;}
.price-active .fn-item{ padding-left:130px; }
.pop-table{position:absolute; left:180px; top:30px; width:300px; background:#fff; border:1px solid #7b9073; -moz-border-radius:3px; -webkit-border-radius:3px; border-radius:3px; z-index:9;}
.pop-table span{position:absolute; width:11px; height:7px; background:url(../images/common/corner.gif) no-repeat; left:25px; top:-7px;}
.pop-table th{color:#7b9073;}
.pop-table th, .pop-table td{ border-bottom:1px solid #e5ede2; padding:5px 0 5px 10px;}
/*机构管理*/
.upload-pic p{color:#999; padding:5px 0 0;}
.upload-pic dl dd .sz{font-size:14px; display:block; color:#555; padding:14px 0;}
.n-fn-layer .tx-confirm{padding:0; margin-bottom:0;}
/*账户资料*/
.fn-item .jqtransform-select3 .jqTransformSelectWrapper{border-radius:3px; height:29px;}
.fn-item .jqtransform-select3 .jqTransformSelectWrapper ul { top: 31px; }

/*安全中心*/
.safe{background:url(../images/common/safe-bg.gif) repeat-x; position:relative; padding:25px 0;}
.safe img{position:absolute; top:9px; right:33px;}
.safe .safe-level{padding:0 30px 25px;}
.safe .safe-serve h4{padding-left:30px; font-weight:bold; margin-bottom:20px;}
.safe .safe-serve li{padding:30px; position:relative;}
.safe .safe-serve li strong, .safe .safe-serve li em, .safe .safe-serve li p{float:left;}
.safe .safe-serve li strong{font-size:14px; color:#3a9f16; width:140px;}
.safe .safe-serve li em{color:#3a9f16; width:65px;}
.safe .safe-serve li p{width:460px;}
.safe .safe-serve li a{font-size:14px; font-weight:bold; position:absolute; top:25px; right:30px;}
.safe .safe-serve li .close{color:#f60;}
.m-tab{ height:30px; line-height:30px; border:1px solid #b5b5b5; border-radius:5px; width:321px; }
.m-tab li a{ display:block; color:#666; width:79px; height:30px; text-align:center; background:url(../images/common/tab-bg.gif) repeat-x; border-right:1px solid #b5b5b5; }
.m-tab .end a{border-right:none;}
.m-tab li .current{background:url(../images/common/tab-cur-bg.gif) repeat-x; color:#fffefe;}
.per-title{ border:1px solid #e3e3e3; border-bottom:none; border-radius:5px; padding:0 15px; position:relative; top:5px; height:44px; line-height:39px; font-size:14px; color:#666; font-weight:600; background:#fff;}
.per-border{ border-top:1px solid #ededed; border-right:1px solid #c5c5c5; border-bottom:1px solid #a6a6a6; border-left:1px solid #c5c5c5; border-radius:5px; box-shadow:0 1px 1px #ddd; position:relative; background:#fff;}
.ch-account li{ position:relative; padding:40px 120px; }
.ch-account li.reg-phone{background:url(../images/common/reg-phone.gif) no-repeat 50px center;}
.ch-account li.reg-mail{background:url(../images/common/reg-mail.gif) no-repeat 50px center;}
.ch-account li.reg-enterprise{background:url(../images/common/reg-enterprise.gif) no-repeat 50px center;}
.ch-account li.com-auth{background:url(../images/common/auth-ico.gif) no-repeat 50px center;}
.ch-account li h4{ font-size:16px; font-weight:bold; color:#666; }
.ch-account li p{ color:#999; }
.ch-account li a{ position:absolute; top:45px; right:40px; }
.price-active .fn-item{ padding-left:130px; }
.price-active .active-l{ width:488px; border-right:1px solid #e4e4e4; }
.price-active .active-r{ width:489px; }
.price-active .tx-confirm{margin-bottom:0;}
.price-active .tx-confirm li span{width:140px;}
.bottom-btn{padding:20px 0; text-align:center; clear:both;}
/*账户首页*/
.account-title{position:relative;}
.account-title .fn-y-tip{width:530px; left:120px; top:-30px;}
.account-title p{font-size:14px; font-weight:600;}
.account-title p a{font-weight:normal; font-size:12px; margin:0 0 0 5px;}
.account-title span{color:#999;}
.account .act-left{position:relative; width:542px; border-right:1px solid #e4e4e4;}
.account .act-balance{padding:25px 0 25px 10px;}
.account .balance{font-family:Arial; font-size:24px; color:#f60; margin:0 5px 0 0;}
.account .act-btn{position:absolute; top:30px; right:10px;}
.account .act-btn a{font-size:14px; font-weight:600;}
.account .act-btn .fn-h-btn, .account .act-btn .s-btns{float:left; margin:0 5px 0 0;}
.account .act-btn .s-menu li a{font-size:12px; font-weight:normal;}
.account .act-state{border-top:1px dashed #e4e4e4; padding:13px 10px;}
.account .safe-level{border-right:1px solid #ccc; padding-right:10px; margin-right:10px;}
.account .safe-level .level{color:#74a662; background:url(../images/common/level.gif) no-repeat;}
.account .auth-state a{color:#999; padding:0 0 2px 23px; margin-right:10px; display:inline-block;}
.account .auth-state .paper{background:url(../images/common/state-ico.gif) no-repeat left 2px;}
.account .auth-state .paper-on{background:url(../images/common/state-ico.gif) no-repeat left -60px;}
.account .auth-state .email{background:url(../images/common/state-ico.gif) no-repeat left -18px;}
.account .auth-state .email-on{background:url(../images/common/state-ico.gif) no-repeat left -80px;}
.account .auth-state .tel{background:url(../images/common/state-ico.gif) no-repeat left -38px;}
.account .auth-state .tel-on{background:url(../images/common/state-ico.gif) no-repeat left -100px;}
.account .act-right{width:225px; padding-left:30px; font-family:"宋体";}
.account .act-right .addbank{margin:20px 0 10px; background:url("../images/common/addbank-bg.jpg") repeat-x; border:1px solid #D8D8D8; border-radius:5px 5px 5px 5px; cursor:pointer; display:block; height:72px; text-align:center;  width:196px;}
.account .act-right .addbank b{display:block; margin-top:18px;}
.account .act-right .addbank span{display:inline-block;}
.account .act-right p{font-size:14px; padding:20px 0 0;}
.account .act-right p a{font-family:Arial; font-weight:600; margin-right:5px;}
.account .act-right ul{padding:10px 0;}
.account .act-right ul li{color:#999;}
.my-list .list-1{width:500px;}
.my-list .list-2{width:298px;}
.my-list table td{height:50px; padding:0 10px;}
.download{padding-left:10px; background:url(../images/common/download.gif) no-repeat left center;}
.trad-detail .con-title{padding:0 20px; height:48px; line-height:48px; color:#333;}
.trad-detail h4{margin:-1px 0 0; padding:13px 0 4px 20px; font-weight:bold; border-top:1px solid #e4e4e4; border-bottom:1px solid #e4e4e4;}
.trad-detail ul{padding:15px 0;}
.trad-detail li{line-height:24px;}
.trad-detail li em, .trad-detail li span{display:inline-block;}
.trad-detail li em{margin-right:5px; width:110px; text-align:right;}
.trad-detail li .letter{margin:20px 0 0 50px;}
.trad-detail dl{padding:15px 30px 20px;}
.trad-detail table td{height:28px; padding:0 0 0 20px; border-bottom:1px solid #e4e4e4; color:#999;}
.trad-detail table .thead td{background:#f9f9f9; color:#666;}
.trad-detail table .text-r{padding-right:20px;}
.indent{text-indent:2em;}
.block{display:block;}
.invest-detail li em{width:150px;}
/* 快捷签约 */
.pay-tab{margin-bottom:10px; padding:12px; background:#dedede; border-top:1px solid #b4b4b4; border-bottom:1px solid #fff; border-left:1px solid #d0d0d0; border-right:1px solid #d0d0d0; border-radius:5px;}
.pay-tab a{display:inline-block; height:35px; line-height:33px; width:102px; text-align:center; font-size:14px; font-family:"微软雅黑"; color:#999; font-weight:bold;}
.pay-tab .cur{background:url(../images/common/b-tab.gif) no-repeat; color:#c60000;}
.sign .unionpay{width:300px; margin:70px auto 120px; text-align:center;}
.sign .unionpay label{display:block; margin-bottom:3px; color:#333; font-weight:bold; text-align:left;}
.sign .unionpay .card-num{width:298px; padding:7px 0; border:1px solid #ccc; border-radius:3px; box-shadow:0 1px 1px #e5e5e5 inset; background:#f7f7f7; font-size:20px; font-family:Arial; text-align:center; color:#a60000;}
.ly-fail{position:relative; padding:20px 50px 20px 60px;}
.ly-fail .icon{width:16px; height:16px; background:url(../images/common/icon.gif) no-repeat -105px -32px; position:absolute; top:22px; left:40px;}
.ly-fail p{color:#666;}
.sign .agree h2{font-size:14px; color:#555; font-weight:bold;}
.sign .agree-con{height:260px; overflow:hidden; margin:5px 0; line-height:24px; background:#dedede; border-top:1px solid #b4b4b4; border-bottom:1px solid #fff; border-left:1px solid #d0d0d0; border-right:1px solid #d0d0d0; border-radius:5px; font-size:14px; color:#666; padding:10px 15px;}
.long-item .fn-item{padding-left:200px;}
.long-item .fn-item .fn-label{width:195px; margin-left:-200px;}
/*帮助中心*/
.m-menu{width:166px; border:1px solid #e1e1e1; border-radius:5px; background:#f3f3f3;}
.m-menu h2{height:39px; line-height:39px; padding-left:36px; background:url(../images/common/fn-ico-menu.png) no-repeat 12px 13px; border-bottom:1px solid #e1e1e1; font-family:"Microsoft YaHei"; font-size:13px; color:#4f4f4f;}
.m-menu ul{padding:0 0 10px;}
.m-menu li{line-height:31px; background:url(../images/common/menu-bg.gif) repeat-x;}
.m-menu li a{display:block; padding-left:27px; color:#666; background:url(../images/common/menu-ico.gif) no-repeat 14px 12px;}
.m-menu li a.cur{color:#a60000; font-weight:bold;}
.m-menu li a.unfold{background-position:14px -13px;}
.m-menu li ul{padding:5px 0; background:#fff;}
.m-menu li li{line-height:21px; background:#fff;}
.m-menu li li a{padding-left:40px; background-position:27px -43px;}
.m-menu li li a:hover{color:#a60000;}
.h-content{padding:0 0 130px;}
.h-content h3{margin-bottom:15px; padding-left:21px; line-height:60px; border-bottom:1px solid #f0f0f0; font-family:"Microsoft YaHei"; font-size:24px; color:#333;}
.h-content p,.h-content li{padding-left:21px; line-height:25px; font-size:14px; color:#333;}
 /*公司简介*/
.brief .brief-con{padding:0 20px 20px;}
.brief h4{font-size:16px; margin-bottom:5px; font-weight:bold;}
.brief p{padding:0; text-indent:2em;}
.brief .poem-con{width:120px; margin-right:20px; text-align:center;}
.brief .poem h5{font-size:14px;}
.brief .poem p{text-indent:0;}


