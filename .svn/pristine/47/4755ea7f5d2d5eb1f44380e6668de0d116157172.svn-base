<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>xhEditor初始化代码生成向导 for xhEditor</title>
<script type="text/javascript" src="jquery/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="xheditor-1.2.1.min.js"></script>
<script type="text/javascript" src="xheditor_lang/zh-cn.js"></script>
</head>
<body>
<form>
 <textarea id="editer" name="editer" style="width:500px;height:300px;"></textarea>
 <button type="button" onclick="btnsubmit()">提交</button>
 
 <button type="button" onclick="btnset()">设置</button>
</form>
</body>
<script type="text/javascript">
  var editer = $('#editer').xheditor({});
  function btnsubmit(){
	  alert(editer.getSource());
  }
  function btnset(){
      editer.setSource();
  }
</script>
</html>