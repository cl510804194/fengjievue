function Snav(f)
{$("#Nmenu"+f).addClass("on");}
function Onav(f)
{$("#Nmenu"+f).removeClass();}
function Scolor(f)
{
	for (i=1;i<=2;i++)
	{$(".SN"+i).hide();$("#np"+i).removeClass();}
